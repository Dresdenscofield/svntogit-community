# Maintainer: Felix Yan <felixonmars@archlinux.org>

pkgname=dtkgui
pkgver=5.5.25
pkgrel=1
pkgdesc='Deepin Toolkit, gui module for DDE look and feel'
arch=('x86_64')
url="https://github.com/linuxdeepin/dtkgui"
license=('LGPL3')
options=('debug')
depends=('dtkcore' 'librsvg' 'qt5-x11extras')
makedepends=('qt5-tools' 'gtest')
source=("https://github.com/linuxdeepin/dtkgui/archive/$pkgver/$pkgname-$pkgver.tar.gz")
sha512sums=('675c32bb4f5c19028a6f825d1da60dad2d9edfe6fbf752138cbc1aa0db4d3a7d93106d8afef0440bcda3365c467d00dc7d7d8afdc71be4a4263fec3b8f82c3b3')

build() {
  cd dtkgui-$pkgver
  qmake-qt5 PREFIX=/usr DTK_VERSION=$pkgver LIB_INSTALL_DIR=/usr/lib
  make
}

package() {
  cd dtkgui-$pkgver
  make INSTALL_ROOT="$pkgdir" install
}
