pkgname=xiphos

post_install() {
  update-desktop-database -q
  gtk-update-icon-cache -q -t -f usr/share/icons/hicolor
  ln -s /usr/lib/libgtkhtml-editor-3.14.so /usr/lib/libgtkhtml-editor.so.0
}

post_upgrade() {
  post_install $1
}

post_remove() {
  update-desktop-database -q
  gtk-update-icon-cache -q -t -f usr/share/icons/hicolor
  rm /usr/lib/libgtkhtml-editor.so.0
}
