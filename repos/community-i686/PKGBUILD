# Contributor: Benjamin Andresen <klapmuetz@gmail.com>

pkgname=rubygems
pkgver=1.3.5
pkgrel=1
pkgdesc="A package management framework for the Ruby programming language"
arch=('i686' 'x86_64')
url="http://docs.rubygems.org"
license=("GPL")
depends=('ruby>=1.8.3')
source=(http://rubyforge.org/frs/download.php/60718/${pkgname}-${pkgver}.tgz)
md5sums=('6e317335898e73beab15623cdd5f8cff')

build() {
    export GEM_HOME=${pkgdir}/usr/lib/ruby/gems/1.8
    cd $srcdir/$pkgname-$pkgver
    ruby setup.rb --prefix=$pkgdir/usr || return 1
    mkdir -p $pkgdir/usr/lib/ruby/site_ruby/1.8
    cd $pkgdir/usr/lib
    mv rbconfig rubygems rubygems.rb ubygems.rb $pkgdir/usr/lib/ruby/site_ruby/1.8
}
