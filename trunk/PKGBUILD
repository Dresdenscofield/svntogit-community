# Maintainer: Felix Yan <felixonmars@archlinux.org>

pkgname=ruby-console
pkgver=1.15.3
pkgrel=2
pkgdesc='Beautiful logging for Ruby'
arch=(any)
url='https://github.com/socketry/console'
license=(MIT)
depends=(ruby-fiber-local)
makedepends=(ruby-bake ruby-rake ruby-rspec)
options=(!emptydirs)
source=(https://github.com/socketry/console/archive/v$pkgver/$pkgname-$pkgver.tar.gz)
sha256sums=('9df62a383e1c71c25ddefcb47c592df70f401a02409fb99837cb4a67f3f59b0d')

prepare() {
  cd console-$pkgver
  sed -r -e 's|~>|>=|g' -e '/covered/d' -e '/signing_key/d' -i console.gemspec spec/spec_helper.rb
  rm gems.rb
}

build() {
  local _gemdir="$(gem env gemdir)"
  cd console-$pkgver
  gem build console.gemspec
  gem install \
    --local \
    --verbose \
    --ignore-dependencies \
    --no-user-install \
    --install-dir "tmp_install/$_gemdir" \
    --bindir "tmp_install/usr/bin" \
    console-$pkgver.gem
  find "tmp_install/$_gemdir/gems/" \
    -type f \
    \( \
        -iname "*.o" -o \
        -iname "*.c" -o \
        -iname "*.so" -o \
        -iname "*.time" -o \
        -iname "gem.build_complete" -o \
        -iname "Makefile" \
    \) \
    -delete
  rm -r tmp_install/$_gemdir/cache
}

check() {
  local _gemdir="$(gem env gemdir)"
  cd console-$pkgver
  GEM_HOME="tmp_install/$_gemdir" rspec
}

package() {
  cd console-$pkgver
  cp -a tmp_install/* "$pkgdir"/
}
